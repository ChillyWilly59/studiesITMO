@{
    ViewData["Title"] = "Статистика успеваемости";
}

<h1>Статистика успеваемости</h1>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Общая статистика</h5>
            </div>
            <div class="card-body">
                <p><strong>Общая сумма баллов:</strong> @ViewBag.TotalScore</p>
                <p><strong>Средний балл:</strong> @ViewBag.AverageScore.ToString("0.00")</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Топ 5 студентов</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ФИО</th>
                            <th>Баллы</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in ViewBag.TopStudents)
                        {
                            <tr>
                                <td>@student.LastName @student.FirstName</td>
                                <td>@student.Score</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">5 худших студентов</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ФИО</th>
                            <th>Баллы</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in ViewBag.WorstStudents)
                        {
                            <tr>
                                <td>@student.LastName @student.FirstName</td>
                                <td>@student.Score</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>