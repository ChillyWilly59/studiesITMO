@model MvcCreditApp.Models.Bid

@{
    ViewData["Title"] = "Удаление заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удаление заявки</h2>
<h3>Вы уверены, что хотите удалить эту заявку?</h3>
<legend>Заявка</legend>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreditHead)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreditHead)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.bidDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bidDate)
        </dd>
